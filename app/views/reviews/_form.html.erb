<%= bootstrap_form_with(model: [@package,@review]) do |f| %>
    <%= f.alert_message "Please fix the errors below", error_summary: false %>
    <%= f.text_field :title %>
    <%= f.number_field :stars %>
    <%= f.text_area :body %>
    <%= f.file_field :image, accept: 'image/png, image/gif, image/jpeg' %>
    <%= f.primary @review.persisted? ? 'Update Review' : 'Create Review' %> 

<% end %>